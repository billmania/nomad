<launch>

	<rosparam param="ticks_per_rev">800</rosparam>
	<rosparam param="ticks_meter">1743</rosparam>
	<rosparam param="maxMetersPerSecond">0.603</rosparam>
	<rosparam param="minMetersPerSecond">0.100</rosparam>
	<rosparam param="motorUpdateHz">20.0</rosparam>
	<rosparam param="rightMotorDirectionSign">-1</rosparam>
	<rosparam param="leftMotorDirectionSign">1</rosparam>

	<rosparam param="encoder_min">0</rosparam>
	<rosparam param="encoder_max">65000</rosparam>
	<rosparam param="encoderUpdateHz">5.0</rosparam>
	<rosparam param="wheel_low_wrap">19500</rosparam>
	<rosparam param="wheel_high_wrap">45500</rosparam>
	<rosparam param="base_width">0.31</rosparam>

    <node
        pkg="nomad"
        type="diff_baseController.py"
        name="diff_baseController"
        respawn="true"
        />
    
    <node
        pkg="nomad"
        type="diff_wheelEncoders.py"
        name="diff_wheelEncoders"
        respawn="true"
        /> 

    <node
        pkg="differential_drive"
        type="diff_tf.py"
        name="diff_tf"
        respawn="true"
        >

        <remap from="odom" to="wheel_odom"/>

	    <rosparam param="out_min">-0.8</rosparam>
	    <rosparam param="out_max">0.8</rosparam>
	    <!--
	         "rate" is the differential_drive update frequency
	      -->
	    <rosparam param="rate">20</rosparam>
	    <rosparam param="rolling_pts">40</rosparam>
	    <rosparam param="timeout_ticks">3</rosparam>
    </node>

    <node
        pkg="differential_drive"
        type="twist_to_motors.py"
        name="twist_to_motors"
        respawn="true"
        >

        <remap from="twist" to="cmd_vel"/>
    </node>

    <node
        pkg="differential_drive"
        type="pid_velocity.py"
        name="left_pid_velocity"
        respawn="true"
        >

      <remap from="wheel" to="lwheel"/>
      <remap from="motor_cmd" to="lmotor"/>
      <remap from="wheel_vtarget" to="lwheel_vtarget"/>
      <remap from="wheel_vel" to="lwheel_vel"/>

      <rosparam param="Kp">1</rosparam>
      <rosparam param="Ki">1</rosparam>
      <rosparam param="Kd">0.2</rosparam>
    </node>

    <node
        pkg="differential_drive"
        type="pid_velocity.py"
        name="right_pid_velocity"
        respawn="true"
        >

      <remap from="wheel" to="rwheel"/>
      <remap from="motor_cmd" to="rmotor"/>
      <remap from="wheel_vtarget" to="rwheel_vtarget"/>
      <remap from="wheel_vel" to="rwheel_vel"/>

      <rosparam param="Kp">1</rosparam>
      <rosparam param="Ki">1</rosparam>
      <rosparam param="Kd">0.2</rosparam>
    </node>

</launch>
