<launch>

    <!-- simulation nodes -->
    <param name="/use_sim_time" value="true"/>
	<node name="stage" pkg="stage" type="stageros" args="$(find robomagellan)/worlds/simple-course.world" respawn="false" />
	<node name="collision" pkg="robomagellan" type="collision_detector.py" args="$(find robomagellan)/worlds/simple-course.waypoints" respawn="true" />

	<node name="test_node" pkg="robomagellan" type="test_node.py" />

    <!-- production nodes -->

	<node name="rxconsole" pkg="rxtools" type="rxconsole" respawn="false" />
    <node name="transforms" pkg="robomagellan" type="transform_broadcaster.py" />

    <!-- we don't have a static map, so we'll use gmapping to build a map using SLAM -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
      <remap from="scan" to="base_scan"/>
      <param name="odom_frame" value="odom"/>
      <param name="map_update_interval" value="30.0"/>
      <param name="maxUrange" value="16.0"/>
      <param name="sigma" value="0.05"/>
      <param name="kernelSize" value="1"/>
      <param name="lstep" value="0.05"/>
      <param name="astep" value="0.05"/>
      <param name="iterations" value="5"/>
      <param name="lsigma" value="0.075"/>
      <param name="ogain" value="3.0"/>
      <param name="lskip" value="0"/>
      <param name="srr" value="0.01"/>
      <param name="srt" value="0.02"/>
      <param name="str" value="0.01"/>
      <param name="stt" value="0.02"/>
      <param name="linearUpdate" value="0.5"/>
      <param name="angularUpdate" value="0.436"/>
      <param name="temporalUpdate" value="-1.0"/>
      <param name="resampleThreshold" value="0.5"/>
      <param name="particles" value="80"/>
      <param name="xmin" value="-50.0"/>
      <param name="ymin" value="-50.0"/>
      <param name="xmax" value="50.0"/>
      <param name="ymax" value="50.0"/>
      <param name="delta" value="0.05"/>
      <param name="llsamplerange" value="0.01"/>
      <param name="llsamplestep" value="0.01"/>
      <param name="lasamplerange" value="0.005"/>
      <param name="lasamplestep" value="0.005"/>
    </node>
    <!-- move_base implements a local and global planner -->
    <node pkg="move_base" type="move_base" respawn="true" name="move_base" output="screen">
        <rosparam file="$(find robomagellan)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find robomagellan)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find robomagellan)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find robomagellan)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find robomagellan)/config/base_local_planner_params.yaml" command="load" />
    </node>

</launch>

